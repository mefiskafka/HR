<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="hr_rule_attendance_absence" model="hr.salary.rule">
            <field name="code">ABSENCE</field>
            <field name="name">Absence</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = (worked_days.ABS and worked_days.ABS.number_of_hours > 0) or False</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -(worked_days.ABS.number_of_hours * (contract.wage / (8*30)))</field>
            <field name="sequence" eval="300"/>
            <field name="note">deduction of absence days</field>
        </record>        

    </data>
</odoo>
