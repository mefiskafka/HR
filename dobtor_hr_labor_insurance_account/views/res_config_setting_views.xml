<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account.l18n.finance</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']" position="inside">
                    <field name="taiwan_account_chart_id" invisible="1" />
                    <h2 attrs="{'invisible': ['|',('has_accounting_entries','!=',False), ('taiwan_account_chart_id','!=', False )]}">Republic of China Finance</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': ['|',('has_accounting_entries','!=',False), ('taiwan_account_chart_id','!=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Employee Salary Journal" for="hr_salary_journal"/>
                                <div class="text-muted">
                                    Accounting journal used to Employees Salary.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="hr_salary_journal" class="col-lg-5 o_light_label"/>
                                        <field name="hr_salary_journal" widget="selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': ['|',('has_accounting_entries','!=',False), ('taiwan_account_chart_id','!=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Withholding Tax Journal" for="withholding_tax_journal"/>
                                <div class="text-muted">
                                    Accounting journal used to Withholding Tax.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="withholding_tax_journal" class="col-lg-5 o_light_label"/>
                                        <field name="withholding_tax_journal" widget="selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': ['|',('has_accounting_entries','!=',False), ('taiwan_account_chart_id','!=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Withholding BLI Journal" for="withholding_bli_journal"/>
                                <div class="text-muted">
                                    Accounting journal used to Withholding BLI.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="withholding_bli_journal" class="col-lg-5 o_light_label"/>
                                        <field name="withholding_bli_journal" widget="selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': ['|',('has_accounting_entries','!=',False), ('taiwan_account_chart_id','!=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Withholding NHI Journal" for="withholding_nhi_journal"/>
                                <div class="text-muted">
                                    Accounting journal used to Withholding NHI.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="withholding_nhi_journal" class="col-lg-5 o_light_label"/>
                                        <field name="withholding_nhi_journal" widget="selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': ['|',('has_accounting_entries','!=',False), ('taiwan_account_chart_id','!=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="BLI Bank" for="bank_bli_journal"/>
                                <div class="text-muted">
                                    Accounting journal used to BLI (Bank).
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="bank_bli_journal" class="col-lg-5 o_light_label"/>
                                        <field name="bank_bli_journal" widget="selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': ['|',('has_accounting_entries','!=',False), ('taiwan_account_chart_id','!=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="NHI Bank" for="back_nhi_journal"/>
                                <div class="text-muted">
                                    Accounting journal used to NHI (Bank).
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="back_nhi_journal" class="col-lg-5 o_light_label"/>
                                        <field name="back_nhi_journal" widget="selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
