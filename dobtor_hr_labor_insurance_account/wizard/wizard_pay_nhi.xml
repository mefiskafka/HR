<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_pay_nhi_wizard" model="ir.ui.view">
            <field name="name">Select date to payment NHI</field>
            <field name="model">account.pay.nhi</field>
            <field name="arch" type="xml">
                <form string="Pay NHI">
                    <group>
                        <p colspan="4">Select the date up to which you want to pay NHI:</p>
                    </group>
                    <group colspan="2">
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button name="action_pay" string="Pay NHI" type="object" class="oe_highlight" />
                        or
                        <button name="action_cancel" string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_account_pay_nhi" name="Pay NHI" res_model="account.pay.nhi" view_mode="form" view_type="form" target="new" />



    </data>
</odoo>
