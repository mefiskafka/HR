<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="hr_rule_ordinary_insurance_company" model="hr.salary.rule">
            <field name="name">Ordinary Insurance (Company)</field>
            <field name="sequence" eval="200"/>
            <field name="gov_ok" eval="True" />
            <field name="base_on">bli</field>
            <field name="code">CORDINARY</field>
            <field name="category_id" ref="dobtor_account_gov_tw.GOVTAX"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -round( contract.insure_wage * (contract.ordinary_premium/100.00) * (contract.ordinary_employer_ratio/100.00) )</field>
        </record>
        
        <record id="hr_rule_occupational_accident_insurance_company" model="hr.salary.rule">
            <field name="name">Occupational Accident Insurance (Company)</field>
            <field name="sequence" eval="201"/>
            <field name="gov_ok" eval="True" />
            <field name="base_on">bli</field>
            <field name="code">CACCIDENT</field>
            <field name="category_id" ref="dobtor_account_gov_tw.GOVTAX"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -round( contract.insure_wage * (float(contract.accident_premium)/100.00) * (contract.accident_employer_ratio/100.00) )</field>
        </record>

        <record id="hr_rule_employment_Insurance_company" model="hr.salary.rule">
            <field name="name">Employment Insurance (Company)</field>
            <field name="sequence" eval="202"/>
            <field name="gov_ok" eval="True" />
            <field name="base_on">bli</field>
            <field name="code">CEMPLOYMENT</field>
            <field name="category_id" ref="dobtor_account_gov_tw.GOVTAX"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -round( contract.insure_wage * (contract.employment_premium/100.00) * (contract.employment_employer_ratio/100.00) )</field>
        </record>

        <record id="hr_rule_pension_premium_withholding" model="hr.salary.rule">
            <field name="name">Self-Labor Pension (Withholding)</field>
            <field name="sequence" eval="203"/>
            <field name="gov_ok" eval="True" />
            <field name="base_on">bli</field>
            <field name="code">WSELF</field>
            <field name="category_id" ref="dobtor_account_gov_tw.GOVTAX"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -round(contract.insure_wage * (contract.pension_premium/100.00) )</field>
        </record>

        <record id="hr_rule_health_Insurance_company" model="hr.salary.rule">
            <field name="name">Health Insurance (Company)</field>
            <field name="sequence" eval="205"/>
            <field name="gov_ok" eval="True" />
            <field name="base_on">nhi</field>
            <field name="code">CHEALTH</field>
            <field name="category_id" ref="dobtor_account_gov_tw.GOVTAX"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -round( contract.health_insure_wage * (contract.health_premium/100.00) * (contract.health_employer_ratio/100.00) * (1 + contract.average_dependents_number))</field>
        </record>

        <record id="hr_rule_withholding_tax" model="hr.salary.rule">
            <field name="name">Tax (Withholding)</field>
            <field name="sequence" eval="209"/>
            <field name="gov_ok" eval="True" />
            <field name="base_on">tax</field>
            <field name="code">CTAX</field>
            <field name="category_id" ref="dobtor_account_gov_tw.GOVTAX"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = -round( contract.wage * (contract.tax_premium/100.00) ) if round( contract.wage * (contract.tax_premium/100.00) ) > round( contract.withholding_tax_limit * (contract.tax_premium/100.00) ) else 0.00</field>
        </record>

